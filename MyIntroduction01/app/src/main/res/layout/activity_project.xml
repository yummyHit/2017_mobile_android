<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.test.yummy.myintroduction01.ProjectActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="1.0">

    <TextView
      android:id="@+id/textView12"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:text="My projects"
      android:textAlignment="center"
      android:textAppearance="@style/TextAppearance.AppCompat.Display1"
      android:textColor="#CC22FF"
      android:textStyle="bold" />

    <Button
      android:id="@+id/pcapBtn"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:text="pcap_test"
      android:textAlignment="viewStart"
      android:textColor="@android:color/holo_blue_light"
      android:textSize="20sp" />

    <Button
      android:id="@+id/tcpBtn"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:text="tcp_test"
      android:textAlignment="viewStart"
      android:textColor="@android:color/holo_blue_light"
      android:textSize="20sp" />

    <Button
      android:id="@+id/arpspoofBtn"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:text="arpspoof_test"
      android:textAlignment="viewStart"
      android:textColor="@android:color/holo_blue_light"
      android:textSize="20sp" />

    <Button
      android:id="@+id/srv2clntBtn"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:text="server2client"
      android:textAlignment="viewStart"
      android:textColor="@android:color/holo_blue_light"
      android:textSize="20sp" />

    <Button
      android:id="@+id/itbankBtn"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:text="itbank_data"
      android:textAlignment="viewStart"
      android:textColor="@android:color/holo_blue_light"
      android:textSize="20sp" />

    <Button
      android:id="@+id/atmBtn"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:text="2016_winter_ATM"
      android:textAlignment="viewStart"
      android:textColor="@android:color/holo_blue_light"
      android:textSize="20sp" />

    <Button
      android:id="@+id/backBtn"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:onClick="on_backBtnClicked"
      android:text="뒤로가기"
      android:textSize="20sp"
      android:textStyle="bold" />

  </LinearLayout>
</android.support.constraint.ConstraintLayout>
