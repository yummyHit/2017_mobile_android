<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="com.test.yummy.myintroduction01.HomeActivity">

  <LinearLayout
    android:id="@+id/linearLayout"
    android:layout_width="0dp"
    android:layout_height="75dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="430dp"
    android:orientation="horizontal"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">

    <Button
      android:id="@+id/introBtn"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:onClick="on_introBtnClicked"
      android:text="소개"
      android:textSize="14sp"
      android:textStyle="bold" />

    <Button
      android:id="@+id/projectBtn"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:onClick="on_projectBtnClicked"
      android:text="프로젝트"
      android:textSize="14sp"
      android:textStyle="bold" />

    <Button
      android:id="@+id/photosBtn"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:onClick="on_photosBtnClicked"
      android:text="사진첩"
      android:textSize="14sp"
      android:textStyle="bold" />

    <Button
      android:id="@+id/homeBtn"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:onClick="on_homeBtnClicked"
      android:text="뒤로가기"
      android:textStyle="bold" />

  </LinearLayout>

  <TextView
    android:id="@+id/imageTextView"
    android:layout_width="0dp"
    android:layout_height="417dp"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/background02"
    android:text=""
    android:textSize="15sp"
    app:layout_constraintBottom_toTopOf="@+id/linearLayout"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="1.0" />
</android.support.constraint.ConstraintLayout>
